<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.TelaAlterarSenhaActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:id="@+id/fundo_azul"
            android:layout_width="422dp"
            android:layout_height="150dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-24dp"
            android:background="#4169E1"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnVoltar"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:layout_marginLeft="32dp"
                android:layout_marginTop="70dp"
                app:srcCompat="@drawable/gph_ic_back" />

            <TextView
                android:id="@+id/editarPerfilLabel"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="-30dp"
                android:layout_marginRight="16dp"
                android:text="Alterar senha "
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30dp" />



        </LinearLayout>

        <TextView
            android:id="@+id/senhaAtualLabel"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="59dp"
            android:text="Senha atual"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/senhaAtualCampo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/style_edit_text"
            android:ems="10"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/novaSenhaLabel"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="59dp"
            android:text="Nova senha"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/novaSenhaCampo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/style_edit_text"
            android:ems="10"
            android:inputType="textPassword"/>

        <TextView
            android:id="@+id/confirmarSenhaLabel"
            android:layout_width="211dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="59dp"
            android:text="Confirmar nova senha"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/confirmarSenhaCampo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/style_edit_text"
            android:ems="10"
            android:inputType="textPassword"/>

        <Button
            android:id="@+id/btnAlterar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="100dp"
            android:layout_marginRight="15dp"
            android:onClick="alterarSenha"
            android:text="Alterar"
            android:background="@drawable/style_btn"/>
    </LinearLayout>

</RelativeLayout>