<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <LinearLayout
            android:id="@+id/fundo_azul"
            android:layout_width="422dp"
            android:layout_height="245dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="-1dp"
            android:layout_marginTop="-24dp"
            android:background="#4169E1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/editarPerfilLabel"
                style="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="16dp"
                android:text="Editar Perfil "
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30dp" />

            <ImageView
                android:id="@+id/fotoUsuario"
                android:layout_width="155dp"
                android:layout_height="116dp"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="125dp"
                android:layout_marginRight="125dp"
                android:background="@drawable/icone_perfil"
                android:elevation="20dp" />

            <Button
                android:id="@+id/btnEditarFotoPerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="125dp"
                android:layout_marginRight="125dp"
                android:background="@android:color/transparent"
                android:text="Alterar foto"
                android:textColor="@color/black" />


        </LinearLayout>

        <TextView
            android:id="@+id/nomePerfilLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="70dp"
            android:layout_marginRight="18dp"
            android:text="Nome:"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/nomePerfilCampo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="17dp"
            android:textSizeHint="20dp"
            android:background="@drawable/style_edit_text"
            android:inputType="text" />

        <TextView
            android:id="@+id/emailPerfilLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="19dp"
            android:text="Email:"
            android:textColor="@android:color/black"
            android:textSize="20dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/emailPerfilCampo"
            android:layout_width="350dp"
            android:layout_height="50dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="7dp"
            android:layout_marginRight="16dp"
            android:background="@drawable/style_edit_text"
            android:inputType="textEmailAddress" />

        <Button
            android:id="@+id/btnAlterarSenha"
            android:layout_width="200dp"
            android:layout_height="48dp"
            android:layout_marginLeft="201.5dp"
            android:layout_marginRight="5.5dp"
            android:layout_marginTop="50dp"
            android:text="Alterar senha"
            android:background="@drawable/style_btn"/>

        <Button
            android:id="@+id/btnSalvarPerfiÃ§"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="50dp"
            android:layout_marginRight="15dp"
            android:text="Salvar"
            android:background="@drawable/style_btn"/>

    </LinearLayout>

</RelativeLayout>