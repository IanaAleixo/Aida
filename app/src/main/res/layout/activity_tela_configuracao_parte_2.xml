<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.ConfiguracaoPart2Activity"
    android:background="@color/white">

    <LinearLayout
        android:id="@+id/fundoAzul"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="-1dp"
        android:layout_marginTop="0dp"
        android:layout_marginRight="0dp"
        android:layout_marginBottom="0dp"
        android:background="#4169E1"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/fundoBranco"
            android:layout_width="380dp"
            android:layout_height="600dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="17dp"
            android:background="@drawable/style_fundo_branco"
            android:orientation="vertical">


            <TextView
                android:id="@+id/emailLabel"
                android:layout_width="341dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="59dp"
                android:text="Gostaria de receber e-mails se, por um acaso deixe de inserir informações no aplicativo?"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/simEmailcheckBox"
                android:layout_width="71dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="27dp"
                android:textSize="20dp"
                android:text="Sim" />

            <CheckBox
                android:id="@+id/naoEmailcheckBox"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:layout_marginLeft="27dp"
                android:textSize="20dp"
                android:text="Não" />

            <TextView
                android:id="@+id/qntDiasEmailLabel"
                android:layout_width="336dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="59dp"
                android:text="Se sim, após quantos dias sem inserção, gostaria de receber contato através de email?"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/qntDiasEmailCampo"
                android:layout_width="285dp"
                android:layout_height="50dp"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="17dp"
                android:background="@drawable/style_edit_text"
                android:ems="10"
                android:inputType="text"/>



            <TextView
                android:id="@+id/dicasLabel"
                android:layout_width="314dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="27dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="59dp"
                android:text="Gostaria de receber dicas para aprender a cuidar melhor da sua saúde mental?"
                android:textColor="@android:color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

            <CheckBox
                android:id="@+id/simDicasCheckBox"
                android:layout_width="71dp"
                android:layout_height="23dp"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="27dp"
                android:textSize="20dp"
                android:text="Sim" />

            <CheckBox
                android:id="@+id/naoDicasCheckBox"
                android:layout_width="74dp"
                android:layout_height="30dp"
                android:layout_marginLeft="27dp"
                android:textSize="20dp"
                android:text="Não" />


            <Button
                android:id="@+id/btnSalvarConf"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="17dp"
                android:layout_marginTop="50dp"
                android:layout_marginRight="15dp"
                android:onClick="salvarConf"
                android:text="Salvar"
                android:background="@drawable/style_btn"/>

        </LinearLayout>


    </LinearLayout>

</RelativeLayout>